{
  "host": "localhost",
  "port": "DEV_PORT",
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "entity": "AUTHENTICATION_ENTITY",
    "service": "AUTHENTICATION_SERVICE",
    "secret": "JWT_SECRET",
    "authStrategies": [
      "jwt",
      "local"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://yourdomain.com",
      "issuer": "JWT_ISSUER",
      "algorithm": "JWT_ALGORITHM",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "LOCAL_USERNAMEFIELD",
      "passwordField": "LOCAL_PASSWORDFIELD"
    },
    "oauth": {
      "redirect": "OAUTH_REDIRECT",
      "google": {
        "key": "OAUTH_GOOGLE_KEY",
        "secret": "OAUTH_GOOGLE_SECRET",
        "scope": [
          "email",
          "openid"
        ]
      },
      "facebook": {
        "key": "<facebook oauth key>",
        "secret": "<facebook oauth secret>"
      },
      "twitter": {
        "key": "<twitter oauth key>",
        "secret": "<twitter oauth secret>"
      }
    }
  },
  "environment": "ENVIRONMENT",
  "mongodb_uri": "MONGODB_URI",
  "sentry_dsn": "SENTRY_DSN"
}
